<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body class="min-h-screen bg-zinc-900 text-white">
    <!-- Navigation Bar -->
    <div class="fixed top-0 left-0 right-0 bg-zinc-900 text-white p-5 ml-5 mb-3 shadow-lg z-10">
        <div class="mt-3 pt-2">
            <a class="text-blue-400" href="/">back to home</a>
            <h1 class="text-3xl tracking-tighter mt-4 ">All Users</h1>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main pt-24 p-10 text-white mt-8">
        <div class="users mt-6 flex flex-wrap gap-4">
            <% if(users.length > 0) { %>
                <% users.forEach(function(x) { %>
                    <div class="user w-64 bg-zinc-800 p-4 rounded-lg transform transition-transform duration-500 hover:scale-105 hover:shadow-lg">
                        <div class="image w-full h-56 rounded-lg bg-zinc-300 overflow-hidden">
                           <img class="w-full h-full object-cover object-top" src="<%= x.image %>" alt="">
                        </div>
                        <h3 class="tracking-tighter mt-3 text-xl text-center"><%= x.name %></h3>
                        <h5 class="text-zinc-500 text-center"><%= x.email %></h5>
                        <div class="flex gap-3 justify-evenly mt-5">
                            <a class="text-zinc-300" href="/edit/<%= x._id %>">Edit user</a>
                            <a class="text-red-500" href="/delete/<%= x._id %>">Delete user</a>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <h3 class="text-zinc-500">no users</h3>
            <% } %>
        </div>    
    </div>
</body>
</html>
